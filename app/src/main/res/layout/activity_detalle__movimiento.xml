<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ciudades"
    tools:context=".Detalle_Movimiento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blacknew">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/txvMiPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Detalle_Movimientox"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txvDetalleNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/descripcion"
                        android:textColor="@android:color/white"
                        android:textSize="16dp" />



                    <TextView
                        android:id="@+id/txvDetalleNombreMovimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/descripcion"
                        android:textColor="@android:color/white"
                        android:textSize="16dp" />



                    <TextView
                        android:id="@+id/txvDetalleFechaMovimiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/txvFechaDefaultRegistro"
                        android:textColor="@android:color/white"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>


                    <TextView
                        android:id="@+id/txvTituloUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/frgUbicaciondelMovimiento"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>


                    <fragment
                        android:id="@+id/fgmMapVistaMovimiento"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="330dp"
                        android:layout_height="268dp"
                        android:layout_gravity="center" />







                </LinearLayout>
            </ScrollView>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>